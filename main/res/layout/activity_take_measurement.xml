<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context=".TakeMeasurementActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/logob1"
            android:contentDescription="image" />
        <!-- input name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@color/textcolor"
                android:hint="  Name"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="#f0f0f0"
                android:id="@+id/cusname"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="16dp"
                android:inputType="text"/>
        </LinearLayout>



            <!--first side-->



                    <EditText
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="18dp"
                        android:textColor="@color/textcolor"
                        android:id="@+id/back"
                        android:textSize="20sp"
                        android:inputType="number"
                        android:background="#f0f0f0"
                        android:hint="  Back"
                        />


                    <EditText
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="16dp"
                        android:textSize="20sp"
                        android:textColor="@color/textcolor"
                        android:id="@+id/roundsleeve"
                        android:background="#f0f0f0"
                        android:layout_marginEnd="18dp"
                        android:hint="  Round Sleeve"
                        android:inputType="number"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/textcolor"
                        android:id="@+id/chest"
                        android:textSize="20sp"
                        android:hint="  Chest"
                        android:background="#f0f0f0"
                        android:layout_marginEnd="18dp"
                        android:inputType="number"/>




                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/textcolor"
                        android:hint="  Top Length"
                        android:textSize="20sp"
                        android:background="#f0f0f0"
                        android:layout_marginEnd="18dp"
                        android:id="@+id/toplength"
                        android:layout_marginTop="6dp"
                        android:inputType="number"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="20sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="16dp"
                        android:background="#f0f0f0"
                        android:hint="  Trouser Length"
                        android:layout_marginEnd="18dp"
                        android:textColor="@color/textcolor"
                        android:id="@+id/trouserlength"
                        android:inputType="number"/>




                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/textcolor"
                        android:hint="  Sleeve"
                        android:id="@+id/sleeve"
                        android:background="#f0f0f0"
                        android:textSize="20sp"
                        android:layout_marginEnd="18dp"
                        android:inputType="number"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/textcolor"
                        android:background="#f0f0f0"
                        android:id="@+id/waist"
                        android:textSize="20sp"
                        android:hint="  Waist"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="6dp"
                        android:inputType="number"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/textcolor"
                        android:id="@+id/slimwaist"
                        android:hint="  Slim Waist"
                        android:background="#f0f0f0"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="6dp"
                        android:textSize="20sp"
                        android:inputType="number"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/textcolor"
                        android:id="@+id/tight"
                        android:hint="  Thigh"
                        android:inputType="number"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="18dp"
                        android:textSize="20sp"
                        android:background="#f0f0f0"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#f0f0f0"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/textcolor"
                        android:id="@+id/ankle"
                        android:inputType="number"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="18dp"
                        android:textSize="20sp"
                        android:hint="  Ankle"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="save"
                android:layout_alignParentBottom="true"
                android:id="@+id/savebutton"

                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>