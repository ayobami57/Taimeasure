<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ceceff">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:  "
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/textcolor2"
            android:id="@+id/name2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adeniji "
            android:textSize="18sp"
            android:textColor="@color/textcolor2"
            android:id="@+id/upname"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No:  "
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/textcolor2"
            android:id="@+id/phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor2"
            android:text="08107292861 "
            android:textSize="18sp"
            android:id="@+id/digit"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Entry: "
        android:layout_marginStart="6dp"
        android:textStyle="bold"
        android:textColor="@color/textcolor2"
        android:textSize="18sp"
        android:id="@+id/brindate"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="17-07-2020"
            android:textColor="#CE0000"
            android:layout_marginStart="6dp"
            android:textSize="18sp"
            android:id="@+id/entrydate"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Collection:  "
            android:textColor="@color/textcolor2"
            android:layout_marginStart="6dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/returdate"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:text="20-07-2020"
            android:textColor="#006030"
            android:layout_marginStart="6dp"
            android:textSize="18sp"
            android:id="@+id/coldate"/>
    </LinearLayout>





</LinearLayout>
